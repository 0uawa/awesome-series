{
  "compilerOptions": {
      "lib": [
          "es2020"
      ],
      "module": "ES2022",
      "target": "es2022",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "incremental": true,
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "build",
      "baseUrl": "src",
      "paths": {
          "config/*": [
              "config/*"
          ]
      }
  },
  "include": [
      "./**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}